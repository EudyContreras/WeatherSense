<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/forecast_item_container_hourly"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:text="N/A"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="12sp"
        android:id="@+id/forecast_hour_field_hourly"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:src="@drawable/weather_icon_3200"
        android:id="@+id/forecast_condition_field_hourly"
        android:layout_width="50dp"
        android:layout_height="60dp" />

    <TextView
        android:text="N/A"
        android:layout_marginBottom="8dp"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:id="@+id/forecast_high_field_hourly"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:text="N/A"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textColor="@color/pale"
        android:textAlignment="center"
        android:id="@+id/forecast_low_field_hourly"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>