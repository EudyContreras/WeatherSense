<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/snackbar_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:layout_alignParentBottom="true"
    app:theme="@style/AppTheme">

    <LinearLayout
        android:elevation="1dp"
        android:id="@+id/snackbar_bottom_layout"
        android:orientation="vertical"
        android:minHeight="55dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/bg_snackbar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/snackbar_bottom_indicator"
            android:background="@color/cyan_light"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/snackbar_bottom_text"
            android:paddingStart="10dp"
            android:paddingBottom="10dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</RelativeLayout>
