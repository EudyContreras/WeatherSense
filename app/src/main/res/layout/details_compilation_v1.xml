<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/details_compilation_v1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="API"
            android:textStyle="bold"
            android:paddingLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include layout="@layout/details_sect_1" />
        <include layout="@layout/details_sect_2" />

    </LinearLayout>
    <include layout="@layout/segment_separator_v"/>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="API"
            android:textStyle="bold"
            android:paddingLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <include layout="@layout/details_sect_3" />
        <include layout="@layout/details_sect_4" />

    </LinearLayout>
    <include layout="@layout/segment_separator_v"/>
    <include layout="@layout/details_sensor"/>
</LinearLayout>